import java.io.*;
import java.util.*;
import java.util.ArrayList;
import java.util.Iterators;
import java.util.List;
public class ArrayListCodes {
	public static void ArrayList_Declare_Modify_Traverse_Iterator() {
		// create ArrayList
		List a = new ArrayList();
		//Create Elements to ArrayList
		a.add(1);
		a.add(2);
		a.add(3);
		a.add(4);
		//Using Iterator to Display Elements of ArrayList
		Iterator itr = a.iterator();
		while(itr.hasNext())
			System.out.println(itr.next());
		//Modify elements of ArrayList through ListIterator
		ListIterator litr = a.listIterator();
		while (litr.hasNext()) {
			int x = litr.next();
			litr.set(x+1);
		}
		System.out.println("Modified contents of list:");
		itr = a.iterator();
		while(itr.hasNext()) {
			System.out.println(itr.next());
			
		}
		
		

		
	}

	public static void main(String[] args) {
		ArrayList_Declare_Modify_Traverse_Iterator();
		
	}

}
